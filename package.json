{
  "name": "miko-desktop-pet",
  "version": "2.0.0",
  "description": "Desktop Pet with Claude Code Integration",
  "main": "dist/main/main/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "webpack --config config/webpack.renderer.js --mode production",
    "build": "npm run clean && concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "watch:main": "tsc --project tsconfig.main.json --watch",
    "watch:renderer": "webpack --config config/webpack.renderer.js --mode development --watch",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"wait-on dist/main/index.js && NODE_ENV=development electron .\"",
    "dev:simple": "npm run build && NODE_ENV=development electron .",
    "start": "npm run build && electron .",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "keywords": [
    "desktop-pet",
    "claude-code",
    "electron",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/color": "^3.0.6",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.1",
    "electron": "^28.1.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.56.0",
    "html-webpack-plugin": "^5.6.0",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.33",
    "postcss-loader": "^8.0.0",
    "prettier": "^3.2.4",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.7",
    "@anthropic-ai/claude-code": "^1.0.0",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "color": "^4.2.3",
    "date-fns": "^3.2.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.312.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.2.0",
    "uuid": "^9.0.1",
    "ws": "^8.19.0",
    "zod": "^4.3.5",
    "zustand": "^4.5.0"
  }
}
